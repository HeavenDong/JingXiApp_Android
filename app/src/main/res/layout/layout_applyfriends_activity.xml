<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="好友验证"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/apply_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:src="@drawable/fanhui"/>
        <TextView
            android:id="@+id/send_apply"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:text="发送"
            android:textSize="12sp"
            android:textColor="@color/white"/>
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:singleLine="true"
    android:gravity="center_vertical"
    android:paddingLeft="15dp"
    android:textSize="14sp"
    android:textColor="@color/im_head_black"
    android:text="您需要发送验证申请，等待对方通过"/>
   <LinearLayout
       android:id="@+id/change_note"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:paddingRight="15dp"
       android:paddingLeft="15dp"
       android:background="@color/white">

        <EditText
            android:id="@+id/apply_edit"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:background="@null"
            android:textColor="@color/im_head_gray"
            android:textSize="12sp"
            android:hint="请输入验证信息"
            />

   </LinearLayout>


</LinearLayout>
