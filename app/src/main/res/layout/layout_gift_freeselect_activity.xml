<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="随心选"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/free_select_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/fanhui"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/white">
                <com.zhuyun.jingxi.android.view.ClearEditText
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/img_gray_fillet_background"
                    android:hint="输入你想要的礼物"
                    android:textColorHint="@color/im_head_gray"
                    android:textSize="14sp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="@color/im_head_black"
                android:text="价格"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="15dp"
                >
                <com.zhuyun.jingxi.android.view.MyGridView
                    android:id="@+id/search_price_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="5"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:scrollbars="none"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp">
                    <EditText
                        android:id="@+id/search_lowest_price"
                        android:singleLine="true"
                        android:inputType="number"
                        android:layout_width="69dp"
                        android:layout_height="26dp"
                        android:gravity="center"
                        android:background="@drawable/img_gray_transparency_fillet_background"
                        android:hint="最低价格"
                        android:textSize="10sp"
                        android:textColorHint="@color/im_head_gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:text="至"
                        android:textSize="10sp"
                        android:textColor="@color/im_head_black"/>
                    <EditText
                        android:id="@+id/search_highest_price"
                        android:layout_width="69dp"
                        android:layout_height="26dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:gravity="center"
                        android:background="@drawable/img_gray_transparency_fillet_background"
                        android:hint="最高价格"
                        android:textSize="10sp"
                        android:textColorHint="@color/im_head_gray"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="@color/im_head_black"
                android:text="场景"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="15dp"
                >
                <com.zhuyun.jingxi.android.view.MyGridView
                    android:id="@+id/search_scene_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="5"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:scrollbars="none"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="@color/im_head_black"
                android:text="节日"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="15dp"
                >
                <com.zhuyun.jingxi.android.view.MyGridView
                    android:id="@+id/search_festival_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="5"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:scrollbars="none"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="@color/im_head_black"
                android:text="对象"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="29dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="15dp"
                >
                <com.zhuyun.jingxi.android.view.MyGridView
                    android:id="@+id/search_object_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="5"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:scrollbars="none"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/red"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/search_reset"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="重置"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>
        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            />
        <TextView
            android:id="@+id/search_sure"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="确定"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
