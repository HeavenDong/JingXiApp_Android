<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="礼品屋"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/gift_search"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/sousuo"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">
        <RelativeLayout
            android:id="@+id/tuijian"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/tuijian_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="推荐"
                android:textSize="12sp"
                android:textColor="@color/red"/>
            <View
                android:id="@+id/tuijian_line"
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/red"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fenlei"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/fenlei_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="专区"
                android:textSize="12sp"
                android:textColor="@color/im_head_black"/>
            <View
                android:id="@+id/fenlei_line"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/red"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/gonglue"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/gonglue_tv"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="攻略"
                android:textSize="12sp"
                android:textColor="@color/im_head_black"/>
            <View
                android:id="@+id/gonglue_line"
                android:visibility="gone"
                android:layout_width="36dp"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/red"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/griditem_back_side"/>
    <FrameLayout
        android:id="@+id/gift_framelayout"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" >
    </FrameLayout>

</LinearLayout>
