<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/back"
   >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/stroke_corner_background">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/grid_item_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/darentuijian"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/grid_item_img"
                android:background="@drawable/cover_circular_transparent_drawing_positive"
                android:scaleType="centerCrop" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/grid_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/im_head_black"
            android:text="泰迪熊"/>
        <TextView
            android:id="@+id/grid_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_item_name"
            android:layout_marginTop="8dp"
            android:textColor="@color/red"
            android:textSize="8sp"
            android:text="￥ 24"/>
        <TextView
            android:id="@+id/grid_item_wish"
            android:layout_width="24dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/stroke_corner_transparent_background"
            android:gravity="center"
            android:text="许愿"
            android:textColor="@color/red"
            android:textSize="8sp"/>

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
