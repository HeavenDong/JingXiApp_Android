<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/transparency"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparency"
        android:focusableInTouchMode="true"
        android:focusable="true"
        >
        <ImageView
            android:id="@+id/wish_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparency"
            android:src="@drawable/beijing"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignRight="@+id/wish_dialog"
            android:src="@drawable/guanbianniu"/>
        <EditText
            android:id="@+id/home_wish_gosearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/wish_dialog"
            android:layout_alignRight="@+id/wish_dialog"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:singleLine="true"
            android:layout_above="@+id/go_wish"

            android:gravity="center"
            android:background="@drawable/wish_dialog_eidtback"
            android:layout_marginBottom="15dp"
            android:hint="快输入你想要的礼物，快去许愿吧"
            android:textSize="12sp"
            android:textColor="@color/im_head_gray"
            android:textColorHint="@color/im_head_gray"
            />
        <ImageView
            android:id="@+id/tuzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/go_wish"
            android:src="@drawable/tuzi"/>
        <ImageView
            android:id="@+id/go_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/wish_dialog"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/anniu"/>
        <View
            android:id="@+id/quit_wish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/wish_dialog"
            />
    </RelativeLayout>
</RelativeLayout>
