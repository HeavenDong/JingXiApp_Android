<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--活动-->
    <LinearLayout
        android:id="@+id/huodong_linear"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp">
            <ImageView
                android:id="@+id/huodong"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/huodong"/>
            <TextView
                android:id="@+id/huodong_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:layout_alignRight="@+id/huodong"
                android:background="@drawable/img_red_circle_background"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精彩活动"
                    android:textColor="@color/im_head_black"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/huodong_tv"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你有2条活动消息"
                    android:textColor="@color/im_head_gray"
                    android:textSize="11sp"/>
            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"/>
            <TextView
                android:id="@+id/huodong_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="昨天"
                android:textColor="@color/im_head_gray"
                android:textSize="8sp"/>
        </RelativeLayout>
    </LinearLayout>

   <!--许愿-->
    <LinearLayout
        android:id="@+id/dongtai_linear"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp">
            <ImageView
                android:id="@+id/dongtai"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/dongtai"/>
            <TextView
                android:id="@+id/dongtai_number"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:layout_alignRight="@+id/dongtai"
                android:background="@drawable/img_red_circle_background"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/im_head_black"
                    android:textSize="13sp"
                    android:text="许愿动态"/>
                <TextView
                    android:id="@+id/dongtai_tv"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的好友有2条许愿动态"
                    android:textColor="@color/im_head_gray"
                    android:textSize="11sp"/>
            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"/>
            <TextView
                android:id="@+id/dongtai_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="昨天"
                android:textColor="@color/im_head_gray"
                android:textSize="8sp"/>
        </RelativeLayout>
    </LinearLayout>
    <!--生日-->
    <LinearLayout
        android:id="@+id/shengri_linear"
        android:layout_width="match_parent"
        android:layout_height="68dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp">
            <ImageView
                android:id="@+id/shengri"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/shengri"/>
            <TextView
                android:id="@+id/shengri_number"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:layout_alignRight="@+id/shengri"
                android:background="@drawable/img_red_circle_background"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/im_head_black"
                    android:textSize="13sp"
                    android:text="生日提醒"/>
                <TextView
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你的好友快过生日了，快去送了吧"
                    android:textColor="@color/im_head_gray"
                    android:textSize="11sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/shengri_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="昨天"
                android:textColor="@color/im_head_gray"
                android:textSize="8sp"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/back"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_gray"/>
</LinearLayout>
