<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="许愿主页"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/wishhome_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:src="@drawable/fanhui"/>
        <ImageView
            android:id="@+id/wishhome_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@drawable/shezhi"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="157dp"
      >
        <ImageView
            android:id="@+id/wish_home_backimg"
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:src="@drawable/touxiang_yuan"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:scaleType="fitXY"
            android:src="@drawable/item_back"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <com.zhuyun.jingxi.android.view.myroundedimageview.RoundedImageView
                android:id="@+id/wishhome_head_url"
                android:layout_gravity="center_horizontal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/touxiang_yuan"
                app:riv_oval="true"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/wishhome_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小茗同学"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
                <ImageView
                    android:id="@+id/wishhome_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/nv"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/add_friends_butt"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:text="发消息"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:background="@drawable/img_red_fillet_background"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/wish_home_wishlist"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/wishhome_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="许愿"
                android:textSize="13sp"
                android:textColor="@color/im_head_gray"
                />
            <TextView
                android:id="@+id/wishhome_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/wishhome_tv"
                android:text="0"
                android:textStyle="bold"
                android:textSize="9sp"
                android:textColor="@color/wish_number"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            >
            <com.zhuyun.jingxi.android.view.CirclrDegreeView
                android:id="@+id/wish_home_img1"
                android:visibility="invisible"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/imback_1"
                android:layout_marginLeft="30dp"/>
            <com.zhuyun.jingxi.android.view.CirclrDegreeView
                android:id="@+id/wish_home_img2"
                android:visibility="invisible"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/imback_2"
                android:layout_marginLeft="6dp"/>
            <com.zhuyun.jingxi.android.view.CirclrDegreeView
                android:id="@+id/wish_home_img3"
                android:visibility="invisible"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/imback_3"
                android:layout_marginLeft="6dp"/>
            <com.zhuyun.jingxi.android.view.CirclrDegreeView
                android:id="@+id/wish_home_img4"
                android:visibility="invisible"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@color/imback_4"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/you_bai_jiantou"
            android:layout_gravity="center_vertical"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="星座"
            android:textSize="13sp"
            android:textColor="@color/im_head_gray"
            />
        <TextView
            android:id="@+id/wish_home_constellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="未填写"
            android:textSize="13sp"
            android:textColor="@color/im_head_black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="地区"
            android:textSize="13sp"
            android:textColor="@color/im_head_gray"
            />
        <TextView
            android:id="@+id/wish_home_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="未填写"
            android:textSize="13sp"
            android:textColor="@color/im_head_black"
            />
    </LinearLayout>

</LinearLayout>
