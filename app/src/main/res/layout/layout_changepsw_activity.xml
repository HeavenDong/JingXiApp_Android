<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/change_psw_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:src="@drawable/fanhui"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="37dp"
        android:layout_marginLeft="37dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="12.5dp"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/denglu_mima"/>
                    <EditText
                        android:id="@+id/change_psw_old"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:maxLength="11"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="13dp"
                        android:background="@null"
                        android:textColor="@color/im_head_gray"
                        android:textColorHint="@color/im_head_gray"
                        android:textSize="14sp"
                        android:hint="请输入原密码"/>
                </LinearLayout>

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:background="@color/divider_gray_line"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="12.5dp"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/denglu_mima"/>
                    <EditText
                        android:id="@+id/change_psw_new"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:maxLength="11"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="13dp"
                        android:background="@null"
                        android:textColor="@color/im_head_gray"
                        android:textColorHint="@color/im_head_gray"
                        android:textSize="14sp"
                        android:hint="请输入新密码"/>
                </LinearLayout>

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:background="@color/divider_gray_line"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="12.5dp"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/denglu_mima"/>
                    <EditText
                        android:id="@+id/change_psw_renew"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:inputType="phone"
                        android:singleLine="true"
                        android:maxLength="11"
                        android:layout_weight="1"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="13dp"
                        android:background="@null"
                        android:textColor="@color/im_head_gray"
                        android:textColorHint="@color/im_head_gray"
                        android:textSize="14sp"
                        android:hint="重新输入新密码"/>
                </LinearLayout>

                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="0.5px"
                    android:background="@color/divider_gray_line"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/change_psw_butt"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="29dp"
                android:gravity="center"
                android:text="确认修改"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/img_red_fillet_background2"/>


        </LinearLayout>

   </RelativeLayout>
</LinearLayout>
