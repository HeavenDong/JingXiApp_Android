<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/im_head_black"
            android:textSize="16sp"
            android:text="星座"/>
        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.zhuyun.jingxi.android.view.CycleWheelView
            android:id="@+id/my_constellation_wheelview"
            android:layout_marginTop="10dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/phone_divider_line"/>
        <TextView
            android:id="@+id/select_constellation_finish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/im_head_black"
            android:textSize="16sp"
            android:text="完成"/>
  </LinearLayout>
</LinearLayout>
