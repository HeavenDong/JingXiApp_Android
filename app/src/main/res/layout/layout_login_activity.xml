<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="19dp"
        >
           <ImageView
               android:id="@+id/login_back"
               android:visibility="gone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="37dp"
               android:layout_marginRight="32.5dp"
               android:layout_centerVertical="true"
               android:background="@drawable/fanhui"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_toRightOf="@+id/login_back"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/accounts_login_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="账号登录"
                    android:textSize="15sp"
                    android:textColor="@color/im_head_black"/>
                <View
                    android:id="@+id/accounts_login_line"
                    android:layout_width="62dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/red"/>
            </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/mobile_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="手机验证码登录"
                android:textSize="15sp"
                android:textColor="@color/im_head_gray"/>
            <View
                android:id="@+id/mobile_login_line"
                android:visibility="gone"
                android:layout_width="101dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/red"/>

        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
   <android.support.v4.view.ViewPager
       android:id="@+id/login_pager"
       android:layout_width="match_parent"
       android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
