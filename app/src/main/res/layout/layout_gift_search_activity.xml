<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="@color/title_color">

            <com.zhuyun.jingxi.android.view.ClearEditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="29dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:background="@drawable/img_white_fillet_background"
                android:drawableLeft="@drawable/haoyou_sousuo"
                android:drawablePadding="10dp"
                android:hint="找到你想要的礼物，快去许愿吧~"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13dp"
                android:textColorHint="@color/im_head_gray"/>
            <TextView
                android:id="@+id/search_cancle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="8dp"
                android:paddingRight="15dp"
                android:gravity="center"
                android:text="取消"
                android:textSize="14sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sousuobeijing"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/search_first_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"
                        android:textSize="24sp"
                        android:textColor="@color/im_head_black"
                        android:text="对象"/>
                    <TextView
                        android:id="@+id/search_second_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="35dp"
                        android:textSize="17sp"
                        android:textColor="@color/im_head_black"
                        android:text="送女友"/>
                    <TextView
                        android:id="@+id/search_three_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"
                        android:textSize="17sp"
                        android:textColor="@color/im_head_black"
                        android:text="送男友"/>
                    <TextView
                        android:id="@+id/search_four_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"
                        android:textSize="17sp"
                        android:textColor="@color/im_head_black"
                        android:text="送闺蜜"/>
                    <TextView
                        android:id="@+id/search_five_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"
                        android:textSize="17sp"
                        android:textColor="@color/im_head_black"
                        android:text="送基友"/>
                    <TextView
                        android:id="@+id/search_six_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"
                        android:textSize="17sp"
                        android:textColor="@color/im_head_black"
                        android:text="送爸妈"/>
                    <TextView
                        android:id="@+id/search_seven_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"
                        android:textSize="17sp"
                        android:textColor="@color/im_head_black"
                        android:text="送同事"/>
                    <TextView
                        android:id="@+id/search_eight_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"
                        android:textColor="@color/im_head_black"
                        android:text="送老师"/>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/search_updata"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:paddingLeft="16dp"
                android:background="@drawable/img_red_transparency_fillet_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/huanyihuan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:text="换一换"/>
            </LinearLayout>
        </LinearLayout>


</LinearLayout>
