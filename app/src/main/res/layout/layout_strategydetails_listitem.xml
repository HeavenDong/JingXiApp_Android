<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/back"/>
    <TextView
        android:id="@+id/strategy_details_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:background="@color/white"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="1.城市花园蜻蜓戒子"
        android:textSize="15sp"
        android:textColor="@color/im_head_black"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/phone_divider_line"/>
    <TextView
        android:id="@+id/strategy_details_item_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:lineSpacingExtra="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:maxLines="3"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:textColor="@color/im_head_black"
        android:text="夫君子之行，静以修身，俭以养德，非淡泊无以明志， 非宁静无以致远。夫学须静也，才须学也，非学无以广才， 非志无以成学。淫慢则不能励精，险躁则不能治性。年与时 驰，意与日去，遂成枯落，多不接世，悲守穷庐，将复何及!"/>

    <ImageView
        android:id="@+id/strategy_details_item_img"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/shouyeliwu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp">
      <TextView
          android:id="@+id/strategy_details_item_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="1"
          android:textSize="14sp"
          android:textColor="@color/red"
          android:text="￥108.01"/>
        <TextView
            android:id="@+id/to_seemore"
            android:layout_width="60dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@color/red"
            android:background="@drawable/stroke_corner_transparent_background"
            android:text="查看详情"/>
    </LinearLayout>
</LinearLayout>
