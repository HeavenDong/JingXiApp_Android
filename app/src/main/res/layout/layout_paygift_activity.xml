<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="礼品支付"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/paygift_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:src="@drawable/fanhui"/>
    </RelativeLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >
                <com.zhuyun.jingxi.android.view.CirclrDegreeView
                    android:id="@+id/gift_pay_head"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="center"
                    android:layout_centerVertical="true"
                    android:src="@drawable/aijingxi_banner"
                    />

                <LinearLayout
                    android:layout_toRightOf="@+id/gift_pay_head"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/gift_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="礼品名称："
                            android:textColor="@color/im_head_black"
                            android:textSize="13sp"/>
                        <TextView
                            android:id="@+id/gift_name"
                            android:layout_toRightOf="@+id/gift_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/im_head_black"
                            android:textSize="13sp"
                            android:singleLine="true"
                            android:text="对戒"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/receiver_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收礼人："
                            android:textColor="@color/im_head_gray"
                            android:textSize="11sp"/>
                        <TextView
                            android:id="@+id/receiver_name"
                            android:layout_toRightOf="@+id/receiver_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/im_head_gray"
                            android:textSize="11sp"
                            android:singleLine="true"
                            android:text="东海风"
                            />


                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/pay_from"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pay_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/im_head_gray"
                            android:textSize="11sp"
                            android:text="数量："
                            android:singleLine="true"
                            />
                        <TextView
                            android:id="@+id/pay_number"
                            android:layout_toRightOf="@id/pay_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/im_head_gray"
                            android:textSize="11sp"
                            android:text="5"
                            android:singleLine="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/pay_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付金额："
                            android:textColor="@color/im_head_gray"
                            android:textSize="11sp"/>
                        <TextView
                            android:id="@+id/pay_price"
                            android:layout_toRightOf="@id/pay_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:textSize="11sp"
                            android:singleLine="true"
                            android:text="￥500"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/divider_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:text="选择支付方式"
                    android:textColor="@color/im_head_gray"
                    android:textSize="11sp"
                    />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="15dp"
                android:background="@color/white"
                android:orientation="vertical">
             <!--微信支付-->
                <LinearLayout
                    android:id="@+id/pay_weixin_relat"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingRight="15dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/weixin"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="微信支付"
                            android:textSize="13sp"
                            android:textColor="@color/im_head_black"
                            />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="亿万人的选择，更快更安全"
                            android:textColor="@color/im_head_gray"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <CheckBox
                            android:id="@+id/pay_weixin_box"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:clickable="false"
                            android:background="@drawable/pay_check_style"/>

                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_gray"
                    />
                <!--支付宝支付-->
                <LinearLayout
                    android:id="@+id/pay_zhifubao_relat"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingRight="15dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/zhifubao"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付宝支付"
                            android:textSize="13sp"
                            android:textColor="@color/im_head_black"
                            />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推荐支付宝用户使用"
                            android:textColor="@color/im_head_gray"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <CheckBox
                            android:id="@+id/pay_zhifubao_box"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:clickable="false"
                            android:background="@drawable/pay_check_style"/>

                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_gray"
                    />
                <!--惊喜币支付-->
                <LinearLayout
                    android:id="@+id/pay_jingxibi_relat"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingRight="15dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/aiaijingxibi"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="惊喜币支付"
                            android:textSize="13sp"
                            android:textColor="@color/im_head_black"
                            />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您有X个惊喜币，可以兑换X元"
                            android:textColor="@color/im_head_gray"
                            android:textSize="11sp" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <CheckBox
                            android:id="@+id/pay_jingxibi_box"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:clickable="false"
                            android:background="@drawable/pay_check_style"/>

                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/divider_gray"
                />
            <RelativeLayout
                android:id="@+id/pay_sure"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/img_red_fillet_background2"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:id="@+id/pay_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="确认支付"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
