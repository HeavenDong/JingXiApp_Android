<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chests_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:background="@color/white">
            <com.zhuyun.jingxi.android.view.myroundedimageview.RoundedImageView
                android:id="@+id/wishdetails_head_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:src="@drawable/touxiang_yuan"
                app:riv_oval="true"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/wishdetails_headname"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="浪浪浪浪"
                            android:textSize="13sp"
                            android:textColor="@color/im_head_black"/>
                        <ImageView
                            android:id="@+id/wishdetails_headsex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:src="@drawable/nv"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp">
                        <TextView
                            android:id="@+id/wishdetails_head_time"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="01.21 10:00"
                            android:textColor="@color/im_head_gray"
                            android:textSize="8sp"
                            />

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/wishdetails_head_see_giftdetails"
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:background="@drawable/img_red_transparency_fillet_background2"
                    android:gravity="center"
                    android:text="许愿详情"
                    android:textColor="@color/red"
                    android:textSize="10sp"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/wishdetails_head_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="11sp"
            android:textColor="@color/gray_text"
            android:text="万水千山总是情，送个礼物行不行"/>
        <com.zhuyun.jingxi.android.view.CirclrDegreeView
            android:id="@+id/wishdetails_head_url"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/shouyeliwu"
            />
        <TextView
            android:id="@+id/wishdetails_head_giftname"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center"
            android:textColor="@color/im_head_black"
            android:textSize="13dp"
            android:text="水晶鞋"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="赞"
            android:textColor="@color/gray_good"
            android:textSize="10sp"
            android:background="@drawable/img_gray_transparency_circle_background"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            >
            <com.zhuyun.jingxi.android.view.HorizontalListView
                android:id="@+id/wishdetails_horilistview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:transcriptMode="alwaysScroll"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/zan"/>
        <TextView
            android:id="@+id/wishdetails_likenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="100"
            android:textSize="8sp"
            android:textColor="@color/gray_good"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="关于众筹"
                android:textSize="10sp"
                android:textColor="@color/gray_zongchou"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/red"
                android:textSize="10sp"
                android:text="帮TA众筹"
                />
            <ImageView
                android:id="@+id/help_crowdfunding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/you_hongi_jiantou"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <com.zhuyun.jingxi.android.view.RoundProgressBar
            android:id="@+id/progress_crowdfunding"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android_custom:roundColor="@color/grey"
            android_custom:roundProgressColor="@color/blue_bg"
            android_custom:textColor="@color/black"
            android_custom:textIsDisplayable="true"
            android_custom:roundWidth="3dip"
            android_custom:textSize="12sp"/>
            />
        <LinearLayout
            android:layout_below="@+id/progress_crowdfunding"
            android:layout_marginTop="6dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="还差:"
                android:textSize="9sp"
                android:textColor="@color/im_head_gray"
                />
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥100"
                android:textColor="@color/red"
                android:textSize="9sp"/>
        </LinearLayout>
        <View
            android:id="@+id/go_crowdfunding"
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</LinearLayout>
