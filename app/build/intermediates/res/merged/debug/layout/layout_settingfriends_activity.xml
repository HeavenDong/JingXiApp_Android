<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_friends"
    android:orientation="vertical"
    android:background="@color/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="好友设置"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/settingfriend_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:src="@drawable/fanhui"/>
    </RelativeLayout>

   <LinearLayout
       android:id="@+id/change_note"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:paddingRight="15dp"
       android:paddingLeft="15dp"
       android:layout_marginTop="10dp"
       android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/im_head_black"
            android:text="设置备注名"
          />

        <TextView
            android:id="@+id/set_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="@color/im_head_gray"
            android:text="小茗同学"/>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:src="@drawable/you_bai_jiantou"/>
   </LinearLayout>

    <LinearLayout
        android:id="@+id/add_blacklist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/im_head_black"
            android:text="加入黑名单"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/you_bai_jiantou"
            />
    </LinearLayout>
   <TextView
       android:id="@+id/delet_friend_butt"
       android:layout_width="match_parent"
       android:layout_height="44dp"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="30dp"
       android:gravity="center"
       android:text="删除好友"
       android:textColor="@color/white"
       android:background="@drawable/img_red_fillet_background2"/>
</LinearLayout>
