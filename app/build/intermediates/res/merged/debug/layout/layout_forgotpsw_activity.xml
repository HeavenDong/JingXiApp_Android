<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/title_color"
        >
        <RelativeLayout
            android:id="@+id/forgot_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/fanhui"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="重置密码"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="37dp"
        android:layout_marginLeft="37dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57.5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12.5dp"
                android:layout_alignParentBottom="true">
                <EditText
                    android:id="@+id/forgot_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:background="@null"
                    android:textColor="@color/im_head_gray"
                    android:textColorHint="@color/im_head_gray"
                    android:textSize="14sp"
                    android:hint="请输入手机号"/>

            </LinearLayout>
            <TextView
                android:id="@+id/forgot_getmessage"
                android:enabled="false"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:background="@drawable/img_gray_fillet_background3"
                android:text="获取验证码"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/divider_gray_line"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="12.5dp"
                android:layout_alignParentBottom="true">

                <EditText
                    android:id="@+id/forgot_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:background="@null"
                    android:textColor="@color/im_head_gray"
                    android:textColorHint="@color/im_head_gray"
                    android:textSize="14sp"
                    android:hint="请输入验证码"/>
            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/divider_gray_line"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="12.5dp"
                android:layout_alignParentBottom="true">

                <EditText
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:password="true"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:maxLength="16"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:background="@null"
                    android:textColor="@color/im_head_gray"
                    android:textColorHint="@color/im_head_gray"
                    android:textSize="14sp"
                    android:hint="输入密码  请设置6—16位字符密码"
                    />

            </LinearLayout>
            <CheckBox
                android:id="@+id/forgot_seepw"
                android:layout_width="21dp"
                android:layout_height="12dp"
                android:button="@null"
                android:background="@drawable/see_psw_check_style"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="13dp"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/divider_gray_line"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/forgot_butt"
            android:layout_width="match_parent"
            android:layout_height="42.5dp"
            android:layout_marginTop="29dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="完成"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/img_red_fillet_background2"/>


    </LinearLayout>
</LinearLayout>
