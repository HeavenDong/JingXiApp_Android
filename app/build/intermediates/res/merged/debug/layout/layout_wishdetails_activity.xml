                <!--android:layout_toLeftOf="@+id/text_2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:src="@drawable/xiangshang"-->
                <!--/>-->
        <!--</RelativeLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="44dp"
            android:paddingLeft="15dp"
            android:background="@color/white">
            <EditText
                android:id="@+id/wishdetails_comment_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@drawable/img_gray_fillet_background"
                android:hint="发表评论"
                android:textColor="@color/im_head_gray"
                android:textSize="10sp"
                android:textColorHint="@color/im_head_gray"/>
            <ImageView
                android:id="@+id/wishdetails_share"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/fenxiang2x"/>
        </LinearLayout>
    </RelativeLayout>




