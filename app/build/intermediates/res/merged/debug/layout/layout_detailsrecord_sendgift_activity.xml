<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="送礼详情"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/detailsrecord_sendgift_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:src="@drawable/fanhui"/>
    </RelativeLayout>
    <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->


        <ScrollView
            android:id="@+id/giftdetails_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/send_details_url"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/lipinwu_banner"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp">
                        <com.zhuyun.jingxi.android.view.myroundedimageview.RoundedImageView
                            android:id="@+id/send_details_head"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/touxiang_yuan"
                            android:layout_gravity="center_vertical"
                            app:riv_oval="true"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_gravity="center_vertical">
                            <TextView
                                android:id="@+id/send_person"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/im_head_black"
                                android:text="收礼人："/>
                            <TextView
                                android:id="@+id/receive_person_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/send_person"
                                android:textSize="13sp"
                                android:textColor="@color/im_head_black"
                                android:text="小苹果"/>

                            <TextView
                                android:id="@+id/send_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/send_person"
                                android:layout_marginTop="12dp"
                                android:textSize="10sp"
                                android:textColor="@color/im_head_gray"
                                android:text="09/11 10:00"/>

                        </RelativeLayout>



                    
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/phone_divider_line"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="礼品名称："
                            android:textColor="@color/im_head_black"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/send_details_giftname"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="坚果"
                            android:textColor="@color/im_head_black"
                            android:textSize="13sp"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="109dp"
                    android:layout_marginTop="10dp"
                    android:padding="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ta"
                        android:textColor="@color/red"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="对你说"
                        android:textColor="@color/im_head_black"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/send_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:lineSpacingExtra="10dp"
                        android:text="44444444444444444444444444444444444444444444444444444444444444444"
                        android:textColor="@color/gray_content"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <TextView
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_vertical"
                        android:text="收货申请已提交请耐心等待~"
                        android:textColor="@color/im_head_black"
                        android:textSize="13sp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/im_head_gray"
                            android:textSize="10sp"
                            android:text="提货订单号为："/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/im_head_gray"
                            android:textSize="10sp"
                            android:text="dafeng123456"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">
                        <TextView
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="有什么疑问请拨打010-82169127"
                            android:textColor="@color/im_head_gray"
                            android:textSize="10sp"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/im_head_gray"
                                android:textSize="10sp"
                                android:text="客服邮箱："/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/im_head_gray"
                                android:textSize="10sp"
                                android:text="aijingxi@58tou.com.cn"/>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/details_receivedgift_call"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:padding="9dp"
                        android:src="@drawable/dianhuax"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/success_taked"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:text="您已成功提货"
                        android:textColor="@color/im_head_black"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="26dp"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:background="@drawable/img_yellow_fillet_background"
                        android:text="删除"/>
                </LinearLayout>




            </LinearLayout>
        </ScrollView>
        <!--底部按钮-->
        <TextView
            android:id="@+id/return_gift"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/red"
            android:text="给Ta回礼"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"/>
    <!--</RelativeLayout>-->
</LinearLayout>
