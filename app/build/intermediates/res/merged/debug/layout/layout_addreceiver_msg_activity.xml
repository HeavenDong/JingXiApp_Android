<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/setting_friends"
    android:orientation="vertical"
    android:background="@color/back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/title_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新建收货信息"
            android:textSize="15sp"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/new_receive_msg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:src="@drawable/fanhui"/>
    </RelativeLayout>

   <LinearLayout
       android:id="@+id/change_note"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:paddingRight="15dp"
       android:paddingLeft="15dp"
       android:layout_marginTop="10dp"
       android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textColor="@color/im_head_black"
            android:text="收货人："
          />

        <EditText
            android:id="@+id/new_receiver_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:textSize="11sp"
            android:textColor="@color/im_head_gray"
            />

   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/phone_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/im_head_black"
            android:text="联系电话："
            />

        <EditText
            android:id="@+id/new_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:singleLine="true"
            android:maxLength="11"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textSize="12sp"
            android:textColor="@color/im_head_gray"
            />
        <ImageView
            android:id="@+id/new_receivedmsg_phome"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/jiahao"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/phone_divider_line"/>
    <LinearLayout
        android:id="@+id/new_receivedmsg_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/im_head_black"
            android:text="所在地区："
            />

        <TextView
            android:id="@+id/new_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/im_head_gray"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/you_bai_jiantou"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/phone_divider_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/im_head_black"
            android:text="详细地址："
            />

        <EditText
            android:id="@+id/new_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:textSize="10sp"
            android:textColor="@color/im_head_gray"
            android:textColorHint="@color/im_head_gray"
            android:hint="街道、楼牌号等"
            />

    </LinearLayout>
   <TextView
       android:id="@+id/new_receivedmsg_save"
       android:layout_width="match_parent"
       android:layout_height="44dp"
       android:layout_marginLeft="15dp"
       android:layout_marginRight="15dp"
       android:layout_marginTop="30dp"
       android:gravity="center"
       android:text="保存"
       android:textColor="@color/white"
       android:background="@drawable/img_red_fillet_background2"/>
</LinearLayout>
